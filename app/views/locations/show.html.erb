<div class="row">
	<div class="col-md-3">

    <%= filepicker_image_tag @location.image %>

<h2>  
  <%= @location.name %>
</h2>

<div class="star-rating" data-score= <%= @avg_rating %> ></div>
<p><%= "#{@reviews.length} reviews" %></p>

<p>
  <strong>Address:</strong>
  <%= @location.address %>
</p>

<%= link_to "Write a Review", new_location_review_path(@location), class: "btn btn-primary" %>

<br><br>

<span align="left"><iframe
  width="230"
  height="150"
  frameborder="0" style="border:0"
  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyB0Ps8ZpDqpoFR6Xz-NgGGuFoMBj8gjnfk
    &q=<%= @location.address.parameterize %>&zoom=14">
</iframe></span>
	</div>

	<div class="col-md-9">
		<% if @reviews.blank? %>
		<h3>No reviews yet. Be the first to write one!</h3>
		<% else %>
<% @reviews.each do |review| %>
<div class="star-rating" data-score= <%= review.rating %> ></div>
 <p><%= review.rating %></p>
 <p><%= review.comment %></p>
 <% end %>
		<% end %>
		
	</div>
</div>




<%= link_to 'Edit', edit_location_path(@location), class: "btn btn-link" %> |
<%= link_to 'Back', locations_path, class: "btn btn-link" %>

<script>
 $('.star-rating').raty({
 path: 'https://s3.amazonaws.com/sportsmeet/stars',
  score: function() {
 	return $(this).attr('data-score');
 }
 });
 </script>
